// -*- javascript -*-

// --------------------------------------------------------------------------------
// buscarPersonaConDNI
// --------------------------------------------------------------------------------

// --------------------------------------------------------------------------------
// --------------------------------------------------------------------------------


// ----------------------------------------------------------------------------
// datos: { dni:Texto 
//         -->
//            buscarPersonaConDNI() <--
//         <--
// {dni:Texto, nombre:Texto: apellidos:Texto}
// ----------------------------------------------------------------------------
module.exports = async function buscarPersonaConDNI( datos ) {

		var textoSQL = "select * from Persona where dni=$dni";
		var valoresParaSQL = { $dni: datos.dni }

		return new Promise( (resolver, rechazar) => {
			buscarPersonaConDNI.conexion.all( textoSQL, valoresParaSQL,
							   ( err, res ) => {
								   ( err ? rechazar(err) : resolver(res) )
							   })
		})
		
} // ()

// --------------------------------------------------------------------------------
// --------------------------------------------------------------------------------
// --------------------------------------------------------------------------------
// --------------------------------------------------------------------------------
// --------------------------------------------------------------------------------
