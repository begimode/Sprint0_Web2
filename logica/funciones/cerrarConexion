module.exports = {

	conexion: null,  // conexiÃ³n con la bd. Se "inyecta" al cargarse.

	// ----------------------------------------------------------------------------
	//            cerrarConexion() -->
	// ----------------------------------------------------------------------------
	f: async function( ) {
		
		return new Promise( (resolver, rechazar) => {
			this.conexion.close( (err)=>{
				( err ? rechazar(err) : resolver() )
			})
		})

	} // ()

} // module.exports

