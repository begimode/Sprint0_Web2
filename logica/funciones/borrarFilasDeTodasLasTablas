const borrarFilasDe = require( "./utilidades/borrarFilasDe.js" )

// --------------------------------------------------------------------------------
// --------------------------------------------------------------------------------
module.exports = {

	conexion: null, 

	// tengo "inyectada" tambiÃ©n this.logica para poder llamar a funciones "hermanas"
	//         this.logica.funciones.loQueSea.f()

	// ----------------------------------------------------------------------------
	//          borrarFilasDeTodasLasTablas() -->
	// ----------------------------------------------------------------------------
	f: async function ( args ) {
		// console.log( " borrarFilasDeTodasLasTablas(): this.conexion = " + this.conexion )
		await borrarFilasDe( "Matricula", this.conexion )
		await borrarFilasDe( "Asignatura", this.conexion )
		await borrarFilasDe( "Persona", this.conexion )
	} // ()

} // module.exports

